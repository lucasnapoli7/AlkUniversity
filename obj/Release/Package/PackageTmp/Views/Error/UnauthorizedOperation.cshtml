
@{
    ViewBag.Title = "UnauthorizedOperation";
}

<h2>UnauthorizedOperation</h2>


<section class="content">
    <div class="error-page">
        <div class="error-content">
            <h3><i class="fa fa-warning text-red"></i>Without authorization</h3>
            @if (ViewBag.operation != "")
            {
                <p><b>Operation:</b> @ViewBag.operation </p>
            }
            @if (ViewBag.module != "")
            {
                <p><b>Module:</b> @ViewBag.module</p>
            }
            @if (ViewBag.msgeErrorException != "")
            {
                <p>@ViewBag.msgeErrorException</p>
            }
        </div>
        <p class="btn btn-default">@Html.ActionLink("Return to home", "Index", "Home")</p>
    </div>
</section>
